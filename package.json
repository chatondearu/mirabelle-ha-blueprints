{
  "name": "mirabelle-ha-blueprints",
  "version": "1.0.0",
  "description": "Collection of custom blueprints for Home Assistant",
  "private": true,
  "author": {
    "name": "Romain",
    "url": "https://github.com/chatondearu"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chatondearu/mirabelle-ha-blueprints.git"
  },
  "keywords": [
    "home-assistant",
    "homeassistant",
    "blueprints",
    "automation",
    "domotique",
    "smart-home"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chatondearu/mirabelle-ha-blueprints/issues"
  },
  "homepage": "https://github.com/chatondearu/mirabelle-ha-blueprints#readme",
  "scripts": {
    "version": "git add -A src",
    "postversion": "git push && git push --tags",
    "test-connection": "ts-node scripts/test-connection.ts",
    "update-automations": "ts-node scripts/update-automations.ts",
    "install-blueprints": "ts-node scripts/install-blueprints.ts",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "validate": "pnpm -r validate"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "@types/node": "^20.0.0",
    "husky": "^9.0.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "dotenv": "^16.4.5",
    "yaml": "^2.4.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "packageManager": "pnpm@8.15.5+sha512.b051a32c7e695833b84926d3b29b8cca57254b589f0649d899c6e9d0edb670b91ec7e2a43459bae73759bb5ce619c3266f116bf931ce22d1ef1759a7e45aa96f",
  "workspaces": [
    "packages/*"
  ]
}
