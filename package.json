{
  "name": "mirabelle-ha-blueprints",
  "version": "1.0.0",
  "description": "Collection of custom blueprints for Home Assistant",
  "private": true,
  "author": {
    "name": "Romain",
    "url": "https://github.com/chatondearu"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chatondearu/mirabelle-ha-blueprints.git"
  },
  "keywords": [
    "home-assistant",
    "homeassistant",
    "blueprints",
    "automation",
    "domotique",
    "smart-home"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chatondearu/mirabelle-ha-blueprints/issues"
  },
  "homepage": "https://github.com/chatondearu/mirabelle-ha-blueprints#readme",
  "scripts": {
    "version": "git add -A src",
    "postversion": "git push && git push --tags",
    "test-connection": "ts-node scripts/test-connection.ts",
    "update-automations": "ts-node scripts/update-automations.ts",
    "install-blueprints": "ts-node scripts/install-blueprints.ts",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "validate": "pnpm -r validate",
    "up": "npx taze major -I -l -r"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/node": "^20.19.25",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "yaml": "^2.8.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "packageManager": "pnpm@10.24.0",
  "workspaces": [
    "packages/*"
  ]
}
